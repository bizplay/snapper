{
    "name": "Snapper - Aw snap tab reloader",
    "short_name": "Snapper",
    "description": "BETA PRODUCT, DON'T USE AT THE MOMENT. Reload Chrome tabs that run into errors (Aw, snap)",
    "manifest_version": 2,
    "version": "0.5.0.0",
    "background": {
        "scripts": ["javascript/background.js"],
        "persistent": true
    },
    "permissions": [
        "tabs",
        "processes"
    ],
    "browser_action": {
      "default_icon": {
        "16": "icons/icon-16.png",
        "24": "icons/icon-24.png",
        "32": "icons/icon-32.png"
      },
      "default_title": "Snap reload"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "19": "icons/icon-19.png",
        "24": "icons/icon-24.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}
